<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <co.ceryle.radiorealbutton.RadioRealButtonGroup
        android:id="@+id/groupButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:rrbg_animate="true"
        app:rrbg_animateDrawables_enter="overshoot"
        app:rrbg_animateTexts_enter="overshoot"
        app:rrbg_dividerColor="#4a4a4a"
        app:rrbg_dividerSize="1dp"
        app:rrbg_radius="10dp"
        app:rrbg_selectorColor="#bababa"
        app:rrbg_selectorSize="4dp">

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:rrb_drawable="@drawable/ic_default"
            app:rrb_drawableHeight="36dp"
            app:rrb_drawablePadding="6dp"
            app:rrb_drawableWidth="36dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/colorPrimaryDark"
            app:rrb_text="Default"
            app:rrb_textStyle="bold"
            app:rrb_textSize="14dp"
            app:rrb_textColor="@color/colorPrimaryDark" />

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:rrb_drawable="@drawable/ic_transfer"
            app:rrb_drawableHeight="36dp"
            app:rrb_drawablePadding="6dp"
            app:rrb_drawableWidth="36dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/colorAccent"
            app:rrb_text="Style"
            app:rrb_textStyle="bold"
            app:rrb_textSize="15dp"
            app:rrb_textColor="@color/colorAccent"  />

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:rrb_drawable="@drawable/ic_impainting"
            app:rrb_drawableHeight="36dp"
            app:rrb_drawablePadding="6dp"
            app:rrb_drawableWidth="36dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/purple_500"
            app:rrb_text="Unmask"
            app:rrb_textSize="13dp"
            app:rrb_textColor="@color/purple_500"  />

    </co.ceryle.radiorealbutton.RadioRealButtonGroup>

    <ImageView
        android:id="@+id/imageNext"
        android:layout_below="@+id/groupButtons"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>